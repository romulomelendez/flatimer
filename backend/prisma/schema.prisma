// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Club {
  id            Int    @id @default(autoincrement())
  name          String @unique
  lastTitleDate Title?
}

model Title {
  id              Int    @id @default(autoincrement())
  name            String
  dateOfLastTitle Int
  years           Int
  mounths         Int
  days            Int
  hours           Int
  minutes         Int
  seconds         Int

  club   Club @relation(fields: [clubId], references: [id])
  clubId Int  @unique
}
